#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Generate the component inventory
echo "üîç Generating component inventory..."
npm run generate:inventory

# Check if COMPONENTS_INVENTORY.md was modified
if git diff --name-only | grep -q "COMPONENTS_INVENTORY.md"; then
  echo "‚úÖ Component inventory updated. Adding to commit..."
  git add COMPONENTS_INVENTORY.md
else
  echo "‚ÑπÔ∏è  Component inventory unchanged."
fi
